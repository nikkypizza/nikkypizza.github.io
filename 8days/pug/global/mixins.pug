mixin couples-card(title, subtitle, text)
  li.couples__card
    .couples__wrapper
      h3.couples__card-title=title
      h4.couples__card-subtitle=subtitle
      p.couples__card-text=text
      a.couples__card-link(href="portfolio-review.html") Подробнее
      ul.couples__color-palette
        li.couples__color-1
        li.couples__color-2
        li.couples__color-3
        li.couples__color-4

mixin workflow__item(number, src, alt, text)
  li(class="workflow__item-"+number)
    img(class="workflow__item-img-"+number, width="140", height="140" src="img/svg/"+src alt=alt )
    p(class="workflow__item-text-"+number)=text

mixin workers__item(name, png, webp, width, height, alt, title, subtitle)
  li(class="workers__item workers__item--"+name)
    picture
      source(type="image/webp" srcset="img/webp/index/index-workers-"+webp)
      img(class="workers__item-img workers__item-img--"+name, width=width, height=height src="img/index/index-workers-"+png alt=alt )
    h3(class="workers__item-title")=title
    span(class="workers__item-subtitle")=subtitle

mixin services__item(number,title, text)
  li(class="services__item services__item--"+number)
    h2.services__item-title=title
    p.services__item-text=text
    a.services__item-link(href="services-wedding.html") Подробнее
